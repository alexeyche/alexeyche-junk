R> #!/usr/bin/RScript
R> 
R> two_binom <- function(file = tempfile(), num.dims = 50, num.cases = 1000) {
+   data.all <- NULL
+   for(c in 1:num.cases) {
+     m <- matrix(0, ncol = num.dims)
+     rb <- rbinom(50,50,0.9)
+     rb2 <- rbinom(50,50,0.1)
+     for(i in 1:length(rb)) {
+       m[rb[i]] = m[rb[i]]+1
+       m[rb2[i]] = m[rb2[i]]+1          
+     }
+     m <- m/max(m)
+     data.all <- rbind(data.all, m)
+   }
+   write.table(data.all, file, sep=",", row.names=FALSE, col.names=FALSE)  
+   cat(file, "\n")  
+ }
R> 
R> args <- commandArgs(trailingOnly = TRUE)
R> if (length(args) != 0) {
+     for (arg in seq(1,length(args))) {
+         fun <- args[arg]
+         if (fun == "two_binom") {
+             two_binom()
+         }
+     }
+ }
R> 
R> 
